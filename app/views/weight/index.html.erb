<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <% if @measurements.length == 0 %>
                <h2>No weight measurements</h2>
                <a href="<%= weight_new_path %>">New Entry</a>
            <% else %>
                <h2>Weight measurements</h2>
                <a href="<%= weight_new_path %>">New Entry</a>
                <br/><br/>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Measurement (<%= current_user.weight_unit %>)</th>
                            <th>Notes</th>
                            <th>Date/Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @measurements.each do |m| %>
                            <tr>
                                <td><%= m.value %></td>
                                <td><%= m.notes %></td>
                                <td><%= to_user_timezone_formatted(m.created_at) %></td>
                            </tr>
                        <% end %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Average</strong>&nbsp;&nbsp;<%= calculate_average_weight(@measurements) %> <%= current_user.weight_unit %></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            <% end %>
        </div>
    </div>
</div>