<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="page-title">Dashboard <span class="subtitle">(<a href="<%= dashboard_customize_path %>"><i class="fa fa-cog"></i>&nbsp;Customize</a>)</span></h1>
            <% @module_rows.each do |module_row| %>
                <div class="card-deck">
                    <% module_row.each_with_index do |m,i| %>
                        <%= render_dashboard_module_card(m, @model) %>
                        <%= render_remaining_placeholder_cards(i) if needs_placeholders(i, module_row.length) %>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).on('turbolinks:load', () => {
        Dashboard.init();
    });
</script>
