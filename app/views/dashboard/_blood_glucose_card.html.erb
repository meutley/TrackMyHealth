<%= render partial: 'dashboard/card_header', locals: { title: "Blood Glucose", link_path: blood_glucose_path }%>
<% if @model.blood_glucose != nil %>
    <div class="card-body show-new-link" data-new-link="<%= blood_glucose_new_path %>">
        <%= @model.blood_glucose.value %>
        <p class="unit-label">
            <%= h current_user.blood_glucose_unit %>
        </p>
    </div>
    <div class="card-footer">
        <span class="date-time-stamp"><%= to_user_timezone_formatted(@model.blood_glucose.taken_at) %></span>
    </div>
<% else %>
    <%= render partial: 'dashboard/no_data', locals: { new_link: blood_glucose_new_path, is_placeholder: false } %>
<% end %>